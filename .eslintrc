{
  "plugins": ["react", "prettier"],
  "extends": ["airbnb", "prettier", "prettier/react"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "env": {
    "es6": true,
    "jest": true
  },
  "rules": {
    "prettier/prettier": [
      2,
      {
        "trailingComma": "none"
      }
    ],
    "import/no-extraneous-dependencies": 0,
    "import/no-unresolved": 0,
    "import/extensions": [
      2,
      "never",
      {
        "png": "always",
        "jpg": "always",
        "css": "always"
      }
    ],
    "linebreak-style": "off",
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
  },
  "globals": {
    "fetch": true,
    "window": true,
    "document": true
  }
}
